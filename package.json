{
  "name": "museum-backend",
  "version": "1.0.0",
  "description": "Backend API for Museum Collection Platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "echo 'No build step required for Node.js backend'",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:reload": "pm2 reload ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "backup": "node scripts/backup-database.js backup",
    "backup:list": "node scripts/backup-database.js list",
    "backup:cleanup": "node scripts/backup-database.js cleanup",
    "backup:restore": "node scripts/backup-database.js restore",
    "load-balancer": "node scripts/load-balancer.js start",
    "nginx-config": "node scripts/load-balancer.js nginx-config",
    "health-check": "curl -f http://localhost:5000/health || exit 1",
    "security-audit": "node scripts/security-audit.js",
    "security-audit:json": "REPORT_FORMAT=json node scripts/security-audit.js",
    "security-audit:html": "REPORT_FORMAT=html node scripts/security-audit.js",
    "security-audit:ci": "AUDIT_LEVEL=moderate AUTO_FIX=false node scripts/security-audit.js",
    "deps-check": "npm outdated",
    "deps-update": "npm update",
    "production:setup": "npm ci --only=production && npm run security-audit",
    "production:start": "NODE_ENV=production pm2 start ecosystem.config.js --env production",
    "production:stop": "pm2 stop ecosystem.config.js",
    "production:restart": "pm2 restart ecosystem.config.js --env production",
    "staging:start": "NODE_ENV=staging pm2 start ecosystem.config.js --env staging",
    "staging:stop": "pm2 stop ecosystem.config.js"
  },
  "keywords": [
    "museum",
    "collection",
    "api",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "Museum Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dompurify": "^3.2.6",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "http-proxy": "^1.18.1",
    "joi": "^17.13.3",
    "jsdom": "^26.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.3",
    "morgan": "^1.10.1",
    "uuid": "^11.1.0",
    "validator": "^13.15.15",
    "winston": "^3.17.0",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/museum-team/museum-backend.git"
  },
  "bugs": {
    "url": "https://github.com/museum-team/museum-backend/issues"
  },
  "homepage": "https://github.com/museum-team/museum-backend#readme"
}
